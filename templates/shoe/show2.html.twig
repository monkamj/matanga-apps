    <h1>Shoe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shoe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ shoe.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ shoe.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ shoe.price }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
